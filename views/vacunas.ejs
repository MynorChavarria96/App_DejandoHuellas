<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vacunas</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.css">
</head>

<body>
    <div class="container-fluid px-0 px-md-5">
        <div class="card">
            <!-- Encabezado dinámico -->
            <h1 id="tituloVacunacion" class="text-center mb-4">Control de Vacunación</h1>
            <div class="d-flex justify-content-between m-2">
                <a href="/mias-mascotas" class="btn btn-secondary btn-custom">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#vacunacionModal">
                    <i class="fas fa-plus"></i> Agregar Vacunación
                </button>
            </div>
            <div class="row mb-2">
                <!-- Tabla de control de vacunación -->
                <div class="table-responsive">
                    <table id="vacunacionTabla" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Vacuna</th>
                                <th>Dosis</th>
                                <th>Descripción</th>
                                <th>Fecha de Aplicación</th>
                                <th>Próxima Fecha</th>
                                <th>Veterinario</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="vacunacionTablaBody">
                            <!-- Aquí se insertarán dinámicamente los datos de las vacunas -->
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>

    <!-- Modal para agregar o editar vacunación -->
    <div class="modal fade" id="vacunacionModal" tabindex="-1" aria-labelledby="vacunacionModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vacunacionModalLabel">Agregar/Editar Vacunación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nombreMascota" class="form-label">Nombre de la Mascota</label>
                            <input type="text" class="form-control" id="nombreMascota" placeholder="Ej. Fido">
                        </div>
                        <div class="mb-3">
                            <label for="vacuna" class="form-label">Vacuna</label>
                            <input type="text" class="form-control" id="vacuna" placeholder="Ej. Rabia">
                        </div>
                        <div class="mb-3">
                            <label for="fechaAplicacion" class="form-label">Fecha de Aplicación</label>
                            <input type="date" class="form-control" id="fechaAplicacion">
                        </div>
                        <div class="mb-3">
                            <label for="proximaFecha" class="form-label">Próxima Fecha</label>
                            <input type="date" class="form-control" id="proximaFecha">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://unpkg.com/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.js"></script>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const id_mascota = window.location.pathname.split('/').pop();
            cargarVacunas(id_mascota);
        });

        function cargarVacunas(id) {
            fetch(`getVacunas/${id}`)
                .then(response => response.json())
                .then(data => {
                    const tbody = document.getElementById('vacunacionTablaBody');
                    tbody.innerHTML = ''; // Limpiar contenido anterior

                    // Verificar si hay datos
                    if (data.length > 0) {
                        // Actualizar el encabezado con el nombre de la mascota
                        const nombreMascota = data[0].nombre;
                        document.getElementById('tituloVacunacion').textContent = `Control de Vacunación de ${nombreMascota}`;

                        // Construir filas con los datos de vacunación
                        data.forEach(vacunacion => {
                            const fechaAplicacion = new Date(vacunacion.fecha_aplicacion).toLocaleDateString();
                            const proximaFechaAplicacion = vacunacion.proxima_fecha_aplicacion
                                ? new Date(vacunacion.proxima_fecha_aplicacion).toLocaleDateString()
                                : 'No definida';

                            const row = `
                                <tr>
                                    <td>${vacunacion.medicamento}</td>
                                    <td>${vacunacion.dosis}</td>
                                    <td>${vacunacion.descripcion_adicional}</td>
                                    <td>${fechaAplicacion}</td>
                                    <td>${proximaFechaAplicacion}</td>
                                    <td>${vacunacion.nombre_veterinario}</td>
                                    <td>
                                        <button class="btn btn-warning me-2" data-bs-toggle="modal" data-bs-target="#vacunacionModal">
                                            <i class="fas fa-edit"></i> Editar
                                        </button>
                                        <button class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>
                            `;

                            tbody.innerHTML += row;
                        });

                        // Inicializar DataTable con responsividad
                        $('#vacunacionTabla').DataTable({
                            responsive: true,
                            language: { url: "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json" }
                        });
                    } else {
                        // Actualizar el encabezado sin el nombre de la mascota
                        document.getElementById('tituloVacunacion').textContent = `Control de Vacunación`;

                        // Mostrar mensaje de que no hay datos
                        tbody.innerHTML = `
                            <tr>
                                <td colspan="7" class="text-center">No hay registro de vacunación para la mascota seleccionada.</td>
                            </tr>
                        `;
                    }
                })
                .catch(error => console.error('Error al cargar las vacunas:', error));
        }
    </script>
</body>

</html>